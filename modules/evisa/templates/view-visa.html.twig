<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4" style="font-weight:bold;">Application Reference: {{ visa_detail.app_ref }}</div>
    <div class="col-sm-8" style="font-weight:bold;">Customer Name: {{ visa_detail.customer_name }}</div>
  </div>
</div>
<br />  
<div class="container">
    <ul class="nav nav-pills">
        <li class="active"><a data-toggle="pill" href="#visa">Visa Information</a></li>
        <li><a data-toggle="pill" href="#menu1">Passanger Information</a></li>
        <li><a data-toggle="pill" href="#menu2">Passport Information</a></li>
        <li><a data-toggle="pill" href="#menu3">Travel Information</a></li>
        <li><a data-toggle="pill" href="#menu4">Passanger Address</a></li>
        <li><a data-toggle="pill" href="#menu5">Documents</a></li>
    </ul>

    <div class="tab-content">
        <div id="visa" class="tab-pane fade in active">
            <h3>Visa Information</h3>
            <br />
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4"><b>Destination:</b> {{ visa_detail.destination_name }}</div>
                    <div class="col-sm-4"><b>Purpose of Travel:</b> {{ visa_detail.purpose_name }}</div>
                    <div class="col-sm-4"><b>Visa Type:</b> {{ visa_detail.visa_type_name }}</div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4"><b>Nationality:</b> {{ visa_detail.nationality }}</div>
                    <div class="col-sm-4"><b>Visa Price:</b> {{ visa_detail.visa_price }}</div>
                    <div class="col-sm-4"><b>Urgent:</b> {{ visa_detail.urgent ? 'Yes' : 'No' }}</div>
                </div>
                
            </div>
        </div>
        <div id="menu1" class="tab-pane fade">
            <h3>Passanger Information</h3>
            <br />
            <div class="container-fluid">
                <div class="row">
                    {% set titleset = {1: 'Mr.', 2: 'Mrs.', 2: 'Master', 2: 'Miss'} %}
                    <div class="col-sm-4"><b>Passanger Name:</b> {{ titleset[visa_detail.title] ~ ' ' ~ visa_detail.name }}</div>
                    <div class="col-sm-4"><b>Passanger Father Name:</b> {{ visa_detail.father_name }}</div>
                    <div class="col-sm-4"><b>Passanger Mother Name:</b> {{ visa_detail.mother_name }}</div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4"><b>Passanger DOB:</b> {{ visa_detail.dob|date("d - M - Y") }}</div>
                    <div class="col-sm-4"><b>Passanger Place of Birth:</b> {{ visa_detail.place_birth }}</div>
                    <div class="col-sm-4"><b>Passanger Country of Birth:</b> {{ visa_detail.country_birth }}</div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4"><b>Passanger Contact No :</b> {{ visa_detail.contact }}</div>
                    {% set genderset = {1: 'Male', 2: 'Female'} %}
                    <div class="col-sm-4"><b>Passanger Gender:</b> {{ genderset[visa_detail.gender] }}</div>
                    {% set mar_status_set = {1:'Single', 2:'Married'} %}
                    <div class="col-sm-4"><b>Passanger Marital Status:</b> {{ mar_status_set[visa_detail.mar_status] }}</div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4"><b>Passanger Religion:</b> {{ visa_detail.religion }}</div>
                    <div class="col-sm-4"><b>Passanger Spouse:</b> {{ visa_detail.spouse }}</div>
                    <div class="col-sm-4"><b>Passanger Profession:</b> {{ visa_detail.profession }}</div>
                </div>
                
            </div>
        </div>
        <div id="menu2" class="tab-pane fade">
            <h3>Passport Information</h3>
            <br />
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4"><b>Passanger Passport No:</b> {{ visa_detail.passport_no }}</div>
                    <div class="col-sm-4"><b>Passanger Passport Issued:</b> {{ visa_detail.passport_issued }}</div>
                    <div class="col-sm-4"><b>Passanger Passport Issued Date:</b> {{ visa_detail.passport_issued_date|date("d - M - Y") }}</div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4"><b>Passanger Passport Expired Date:</b> {{ visa_detail.passport_expired_date|date("d - M - Y") }}</div>
                </div>
            </div>
        </div>
        <div id="menu3" class="tab-pane fade">
            <h3>Travel Information</h3>
            <br />
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4"><b>Arrival From:</b> {{ visa_detail.arrival_from }}</div>
                    <div class="col-sm-4"><b>Arrival Date:</b> {{ visa_detail.arrival_date|date("d - M - Y") }}</div>
                    <div class="col-sm-4"><b>Departure To:</b> {{ visa_detail.departure_to }}</div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4"><b>Departure Date:</b> {{ visa_detail.departure_date|date("d - M - Y") }}</div>
                </div>
            </div>
        </div>
        <div id="menu4" class="tab-pane fade">
            <h3>Passanger Address</h3>
            <br />
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4"><b>Address Line 1:</b> {{ visa_detail.address_line_1 }}</div>
                    <div class="col-sm-4"><b>Address Line 2:</b> {{ visa_detail.address_line_2 }}</div>
                    <div class="col-sm-4"><b>City:</b> {{ visa_detail.city }}</div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4"><b>State:</b> {{ visa_detail.state }}</div>
                    <div class="col-sm-4"><b>Country:</b> {{ visa_detail.country }}</div>
                    <div class="col-sm-4"><b>Pin Code:</b> {{ visa_detail.zip }}</div>
                </div>
            </div>
        </div>
        <div id="menu5" class="tab-pane fade">
            <h3>Documents</h3>
            <br />
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4"><a href="{{ photo_url }}" download>Passanger Photo</a></div>
                    <div class="col-sm-4"><a href="{{ pass_first }}" download>Passport First Page</a></div>
                    <div class="col-sm-4"><a href="{{ pass_last }}" download>Passport Last Page</a></div>
                </div>
                <br />
                <div class="row">
                    {% if sup_doc_1 %}
                    <div class="col-sm-4"><a href="{{ sup_doc_1 }}" download>Supporting Doc 1</a></div>
                    {% endif %}
                    {% if sup_doc_2 %}
                    <div class="col-sm-4"><a href="{{ sup_doc_2 }}" download>Supporting Doc 2</a></div>
                    {% endif %}
                    {% if ticket %}
                    <div class="col-sm-4"><a href="{{ ticket }}" download>Ticket</a></div>
                    {% endif %}
                </div>
            </div>
        </div>
                
    </div>
</div>
<br />
<br />
{% if express %}
    <p><a href="{{ url('evisa.express.visa') }}" class="btn btn-primary" role="button">{{ 'Back to Visa Listing'|t }}</a></p>
{% else %}
    <p><a href="{{ url('evisa.visa') }}" class="btn btn-primary" role="button">{{ 'Back to Visa Listing'|t }}</a></p>
{% endif %}    

